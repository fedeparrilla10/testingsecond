---
import Section from './Section.astro';
import { secondSectionData, secondSectionImg } from '../data/second_section.js';
---

<Section color="white">
  <article
    slot="main"
    class="text-gray-200 flex flex-col items-center justify-center"
  >
    <div
      class="flex flex-col xl:flex-row items-center justify-center w-4/5 xl:w-3/4 gap-12"
    >
      <div
        class="flex flex-col gap-4 2xl:gap-12 order-2 max-w-6xl justify-center items-center xl:pt-12"
      >
        {
          secondSectionData.map((eachColumn) => {
            return (
              <div class="flex flex-col gap-2 xl:gap-4">
                <h2 class="text-[30px] xl:text-[40px] font-bold tracking-widest text-gray-300">
                  {eachColumn.title}
                </h2>
                <p class="2xl:text-xl">{eachColumn.description}</p>
              </div>
            );
          })
        }
      </div>

      {
        secondSectionImg.map((img) => {
          return (
            <img
              class="object-cover sm:max-w-sm lg:max-w-md xl:max-w-xl order-1 pl-8 hidden lg:block"
              src={img.src}
              alt={img.alt}
            />
          );
        })
      }
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] backdrop-blur-sm text-sm rounded font-medium text-white px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
      href="#"
    >
      COMPRAR AHORA</a
    >
  </div>

  <div
    slot="background"
    class="bg-gradient-to-r from-zinc-950 to-zinc-800 object-center object-cover h-full w-full"
  >
  </div>
</Section>
